{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "watchAssets": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "common/mail/templates/**/*",
        "outDir": "dist/src/"
      },
      {
        "include": "**/*.sql",
        "outDir": "dist/src/"
      }
    ]
  }
}
